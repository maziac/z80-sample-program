{
    // Verwendet IntelliSense zum Ermitteln möglicher Attribute.
    // Zeigen Sie auf vorhandene Attribute, um die zugehörigen Beschreibungen anzuzeigen.
    // Weitere Informationen finden Sie unter https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "dezog",
            "request": "launch",
            "name": "Internal Simulator",
            "remoteType": "zsim",
            "zsim": {
                "visualMemory": "ZX48"
                //"Z80N": true,
            },
            "listFiles": [
                {
                    "path": "z80-sample-program.list",
                    "useFiles": true,
                    "asm": "sjasmplus",
                    "mainFile": "main.asm"
                }
            ],
            "history": {
                "reverseDebugInstructionCount": 1000000,
                "spotCount": 10,
                "codeCoverageEnabled": true
            },
            "startAutomatically": false,
            "skipInterrupt": true,
            "commandsAfterLaunch": [
                "-logpoint enable",
                "-assert enable",
                "-wpmem enable"
                //"-sprites",
                //"-patterns"
            ],
            "disassemblerArgs": {
                "esxdosRst": true
            },
            "rootFolder": "${workspaceFolder}",
            "topOfStack": "stack_top",
            "load": "z80-sample-program.sna",
            //"load": "z80-sample-program.nex",
            "smallValuesMaximum": 513,
            "tmpDir": ".tmp"
        },

        {
            "type": "dezog",
            "request": "launch",
            "name": "ZEsarUX",
            "remoteType": "zrcp",
            "zrcp": {
                "hostname": "localhost",
                "port": 10000
            },
            "listFiles": [
                {
                    "path": "z80-sample-program.list",
                    "useFiles": true,
                    "asm": "sjasmplus",
                    "mainFile": "main.asm"
                }
            ],
            "history": {
                "reverseDebugInstructionCount": 1000000,
                "spotCount": 10,
            },
            "startAutomatically": false,
            "skipInterrupt": true,
            "commandsAfterLaunch": [
                //"-sprites",
                //"-patterns"
            ],
            "disassemblerArgs": {
                "esxdosRst": true
            },
            "rootFolder": "${workspaceFolder}",
            "topOfStack": "stack_top",
            "load": "z80-sample-program.sna",
            "smallValuesMaximum": 513,
            "tmpDir": ".tmp"
        },
    
        {
            "type": "dezog",
            "request": "launch",
            "name": "Unit Tests",
            "unitTests": true,
            "remoteType": "zsim",
            "resetOnLaunch": true,
            "skipInterrupt": true,
            "commandsAfterLaunch": [
                "-wpmem enable",
                "-assert enable",
                "-logpoint enable", // Enable all logpoints, especially [UNITTEST]
            ],
            "disassemblerArgs": {
                "esxdosRst": true
            },
            "listFiles": [
                {
                    "path": "z80-sample-program.list",
                    "useFiles": true,
                    "asm": "sjasmplus",
                    "mainFile": "main.asm"
                }
            ],
            "rootFolder": "${workspaceFolder}",
            "load": "z80-sample-program.sna",
            "smallValuesMaximum": 513,
            "tmpDir": ".tmp"
        },

    ]
}